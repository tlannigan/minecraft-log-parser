{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
